<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.administrator.mazegame.UI.Game">

    <TextView
        android:id="@+id/level_tv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_marginStart="18dp"
        android:layout_marginTop="12dp"
        android:text="Level : "
        android:textStyle="bold" />

    <TextView
        android:id="@+id/stat_tv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBaseline="@+id/level_tv"
        android:layout_alignBottom="@+id/level_tv"
        android:layout_toStartOf="@+id/score_tv"
        android:text="Score : "
        android:textSize="14sp"
        android:textStyle="bold" />

    <Button
        android:id="@+id/down_btn"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="11dp"
        android:text="Down" />

    <Button
        android:id="@+id/up_btn"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_above="@+id/down_btn"
        android:layout_alignStart="@+id/down_btn"
        android:text="Up" />

    <Button
        android:id="@+id/right_btn"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBaseline="@+id/left_btn"
        android:layout_alignBottom="@+id/left_btn"
        android:layout_toEndOf="@+id/down_btn"
        android:text="right" />

    <Button
        android:id="@+id/left_btn"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@+id/down_btn"
        android:layout_marginBottom="20dp"
        android:layout_toStartOf="@+id/down_btn"
        android:text="Left" />

    <TableLayout
        android:id="@+id/tableLayout"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@+id/textView7"
        android:layout_above="@+id/textView4"
        android:layout_alignEnd="@+id/score_tv"
        android:layout_alignStart="@+id/level_tv">

        <TableRow
            android:layout_width="match_parent"
            android:layout_height="0dp" />

        <TableRow
            android:layout_width="match_parent"
            android:layout_height="0dp" />

        <TableRow
            android:layout_width="match_parent"
            android:layout_height="0dp" />

        <TableRow
            android:layout_width="match_parent"
            android:layout_height="0dp" />
    </TableLayout>

    <TextView
        android:id="@+id/level_count_tv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBaseline="@+id/level_tv"
        android:layout_alignBottom="@+id/level_tv"
        android:layout_toEndOf="@+id/level_tv"
        android:text="1" />

    <TextView
        android:id="@+id/score_tv"
        android:layout_width="50dp"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"
        android:layout_alignTop="@+id/stat_tv"
        android:layout_marginEnd="20dp"
        android:text="100"
        android:textAlignment="textEnd" />

    <TextView
        android:id="@+id/nxtCat_text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_alignStart="@+id/level_tv"
        android:text="Next Cat : "
        android:textStyle="bold" />

    <TextView
        android:id="@+id/bestScore_text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Best Score : "
        android:textStyle="bold"
        android:layout_alignParentTop="true"
        android:layout_toStartOf="@+id/score_tv" />

    <TextView
        android:id="@+id/bestScore_tv"
        android:layout_width="50dp"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_toEndOf="@+id/stat_tv"
        android:text="0"
        android:textAlignment="textEnd"
        android:textColor="@android:color/holo_red_dark"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/nxtCat_tv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_toEndOf="@+id/nxtCat_text"
        android:text="30" />

    <TextView
        android:id="@+id/textView4"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_above="@+id/up_btn"
        android:layout_centerHorizontal="true"
        android:text=" " />

    <TextView
        android:id="@+id/textView7"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/stat_tv"
        android:layout_centerHorizontal="true"
        android:text=" " />


</RelativeLayout>
